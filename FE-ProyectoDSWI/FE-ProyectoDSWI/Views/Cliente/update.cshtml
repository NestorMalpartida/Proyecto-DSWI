@model FE_ProyectoDSWI.Models.Cliente

@{
    ViewData["Title"] = "update";
}

<h1>Actualizar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="codigo" class="control-label">Código</label>
                <input asp-for="codigo" class="form-control" readonly/>
                <span asp-validation-for="codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoUsuario" class="control-label">Usuario</label>
                <input asp-for="codigoUsuario" class="form-control" readonly />
                <span asp-validation-for="codigoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoDistrito" class="control-label">Distrito</label>
                <select asp-for="codigoDistrito" class="form-control" asp-items="ViewBag.listaDistrito">
                    <option value="">Seleccione un Distrito</option>
                </select>
                <span asp-validation-for="codigoDistrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direccion" class="control-label"></label>
                <input asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Atrás", "findAll", new { }, new { @class = "btn btn-danger" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
