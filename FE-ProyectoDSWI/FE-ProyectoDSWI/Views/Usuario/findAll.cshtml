@model IEnumerable<FE_ProyectoDSWI.Models.UsuarioDetalle>

@{
    ViewData["Title"] = "findAll";
}

<h1>Lista de Usuarios</h1>

<p>
    @Html.ActionLink("Nuevo Usuario", "save", new { }, new { @class = "btn btn-primary" })
</p>
<div class="col-md-12">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    CÓDIGO
                </th>
                <th>
                    ROL
                </th>
                <th>
                    CORREO
                </th>
                <th>
                    NOMBRE
                </th>
                <th>
                    DNI
                </th>
                <th>
                    TELÉFONO
                </th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.rol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefono)
                    </td>
                    <td>
                        @Html.ActionLink("Actualizar", "update", new { codigo = item.codigo }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Información", "details", new { codigo = item.codigo }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Eliminar", "delete", new { codigo = item.codigo }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
