@model FE_ProyectoDSWI.Models.Producto

@{
    ViewData["Title"] = "save";
}

<h1>Nuevo</h1>

<h4>Auto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label">NOMBRE</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label">DESCRIPCION</label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codigoMarca" class="control-label">MARCA</label>
                <select asp-for="codigoMarca" class="form-control" asp-items="ViewBag.listaMarca">
                    <option value="">Seleccione un Distrito</option>
                </select>
                <span asp-validation-for="codigoMarca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precio" class="control-label">PRECIO</label>
                <input asp-for="precio" class="form-control" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Atrás", "findAll", new { }, new { @class = "btn btn-danger" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
